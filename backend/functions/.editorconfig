root = true

[*]
end_of_line = lf
charset = utf-8
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true
indent_size = 4
quote_type = single
max_line_length = 120

[*.py]
indent_size = 4

[*.ts]
indent_size = 4

[*.js]
indent_size = 2

[*.vue]
indent_size = 2

[*.*sx]
indent_size = 2

[*.*ml]
indent_size = 2

[*.json]
indent_size = 2

[*.md]
indent_size = 2
trim_trailing_whitespace = false
